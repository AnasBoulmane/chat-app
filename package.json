{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "chat application using (React, Express.js and Socket.io) ",
  "main": "server/build/index.js",
  "author": "aboulmane <aboulmane@sqli.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "server",
    "react-app",
    "packages/*"
  ],
  "scripts": {
    "lint": "tslint -c tslint.json 'react-app/src/**/*.ts' 'server/src/**/*.ts'",
    "format": "prettier-tslint fix 'server/**/*.ts' 'react-app/**/*.ts*'"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "prettier-tslint": "^0.4.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^5.0.0",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|tsx)": "prettier-tslint fix"
  }
}
